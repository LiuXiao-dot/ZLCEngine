/* GroupBox */
.zlc-group-box > #title{
    font-size: 20px;
    -unity-font-style: bold;
}

/* flex */
.zlc-horizontal{
    flex: 1 0 0;
    flex-direction: row;
}
.zlc-vertical{
    flex: 1 0 auto;
    flex-direction: column;
}
.zlc-flex{
    flex: 1 0 0;
}
.zlc-flex-height{
    flex:1 0 auto;
}
.zlc-group-box{
    background-color: dimgray;
    padding: 15px 15px 15px 15px;
    border-color: black;
    border-radius: 5px;
    border-width: 1px;
}

